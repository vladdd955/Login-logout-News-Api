{% extends 'layout.twig' %}
{% block content %}
    <h1>Registration form</h1>
    <br>
    <form  action="/register" method="post">
        <label for="name">Name</label>
        <input class="border" type="text" name="name" /> <br>

        <label for="email">Email</label>
        <input class="border" type="email" name="email" /> <br>

        <label for="password">Password</label>
        <input class="border" type="password" name="password" /> <br>

        <label for="Repeat password">Repeat password</label>
        <input class="border" type="password" name="rePassword" />

        <input type="submit" value="Register"/> <br>

        <br>

           <p> If you have account please Sign in  ->  <a href="/authorization">Authorization</a>    </p>


        <button style="border-radius: 20px;" href="/register" class="bg-transparent hover:bg-blue-500 text-blue-700 font-semibold hover:text-white py-2 px-4 border border-blue-500 hover:border-transparent rounded">
            Registration
        </button>

    </form>
{% endblock %}


