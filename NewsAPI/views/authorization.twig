{% extends 'layout.twig' %}
{% block content %}
    <h1>Authorization please</h1>
    <br>
    <form  action="/authorization" method="post">
        <label for="Email">Email</label>
        <input class="border" type="text" id="name" name="name" required/> <br>

        <label for="password">Password</label>
        <input class="border" type="password" id="password" name="name" required/> <br>


        <input type="submit" value="Login"/> <br>


        <br>

       If you don't have account, add it! ->    <a href="/register"> Registration</a>

        <button style="border-radius: 20px;" href="/register" class="bg-transparent hover:bg-blue-500 text-blue-700 font-semibold hover:text-white py-2 px-4 border border-blue-500 hover:border-transparent rounded">
            Registration
        </button>
    </form>
{% endblock %}
